rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // PUBLIC ACCESS:
    // - Anyone can read user profiles for display names, avatars, etc.
    // - Anyone can create a user document (signup).
    match /users/{userId} {
      allow read;
      allow create: if request.auth == null && resource.data.uid == request.resource.id;
      allow update: if request.auth.uid == userId;
    }

    // AUTHENTICATED ACCESS:
    // - Any logged-in user needs to be able to read server details to join or view them.
    match /servers/{serverId} {
      allow read; 
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid in resource.data.members;
      allow delete: if request.auth != null && request.auth.uid == resource.data.ownerId;

      // Channels can be read by anyone, but only server members can write messages.
      match /channels/{channelId} {
        allow read;
        allow create, update, delete: if request.auth != null && request.auth.uid == get(/databases/$(database)/documents/servers/$(serverId)).data.ownerId;
        
        match /messages/{messageId} {
            allow read;
            allow create: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/servers/$(serverId)).data.members;
            allow update, delete: if request.auth != null && request.auth.uid == resource.data.sender;
        }
      }
    }
    
    // RESTRICTED ACCESS:
    // - Chats and messages are private between members.
    match /chats/{chatId} {
      allow read, delete: if request.auth.uid in resource.data.members;
      allow create: if request.auth.uid in request.resource.data.members;

      match /messages/{messageId} {
        allow read: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.members;
        allow create: if request.auth.uid == request.resource.data.sender;
        allow update, delete: if request.auth.uid == resource.data.sender;
      }
    }
    
    // Friend requests
    match /friendRequests/{requestId} {
      // You can read requests sent to you or from you
      allow read: if request.auth.uid == resource.data.to || request.auth.uid == resource.data.from.id;
      // You can create a request if you are the sender
      allow create: if request.auth.uid == request.resource.data.from.id;
      // You can update a request (accept/decline) if you are the recipient
      allow update: if request.auth.uid == resource.data.to;
    }
  }
}
