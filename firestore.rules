rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read their own profile, and any user can read any other user's profile
    // This is needed to populate user information in chats.
    // Users can only write to their own profile.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // A user can read a chat if they are a member of it.
    // A user can create a chat if they are a member of it.
    // A user can update/delete a chat if they are a member of it.
    match /chats/{chatId} {
      allow read, update, delete: if request.auth.uid in resource.data.members;
      allow create: if request.auth.uid in request.resource.data.members;

      // Messages can be read by any member of the chat.
      // Messages can be created by any member of the chat.
      // Messages can only be updated/deleted by the person who sent them.
      match /messages/{messageId} {
        allow read, create: if get(/databases/$(database)/documents/chats/$(chatId)).data.members[0] == request.auth.uid || get(/databases/$(database)/documents/chats/$(chatId)).data.members[1] == request.auth.uid;
        allow update, delete: if request.auth.uid == resource.data.sender;
      }
    }
    
    // Friend requests can be created by any authenticated user.
    // They can be read only by the sender or receiver.
    // They can only be updated by the receiver.
    match /friendRequests/{requestId} {
        allow create: if request.auth != null;
        allow read, update: if request.auth.uid == resource.data.to || request.auth.uid == resource.data.from.id;
    }
  }
}
