rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }

    match /users/{userId} {
      allow read: if request.auth != null;
      // User can only create their own user document
      allow create: if request.auth.uid == userId;
      // User can only update their own user document
      allow update: if request.auth.uid == userId;
    }

    match /friendRequests/{requestId} {
      // User can create a friend request if the `from` id is their own
      allow create: if request.auth.uid == request.resource.data.from.id;
      // User can read or update a friend request if the `to` id is their own (e.g. to accept/decline it)
      allow read, update: if request.auth.uid == resource.data.to;
    }

    match /chats/{chatId} {
      // User can read, create, update, or delete a chat if they are a member
      allow read, create, update, delete: if request.auth.uid in resource.data.members;

      match /messages/{messageId} {
        // User can read/create messages if they are a member of the parent chat
        allow read, create: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.members;
        // User can update/delete a message only if they are the sender
        allow update, delete: if request.auth.uid == resource.data.sender;
      }
    }

    match /servers/{serverId} {
      // Any authenticated user can read server and channel info
      allow read: if request.auth != null;
      
      // Users can create servers
      allow create: if request.auth.uid == request.resource.data.ownerId;

      // An authenticated user can update a server if:
      // 1. They are the owner (for changing name, icon, etc.)
      // 2. They are adding THEMSELVES to the members list (joining the server)
      allow update: if request.auth.uid == resource.data.ownerId || 
                      (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members']) &&
                       request.resource.data.members.size() == resource.data.members.size() + 1 &&
                       request.auth.uid in request.resource.data.members);
      
      // Only the owner can delete a server
      allow delete: if request.auth.uid == resource.data.ownerId;

      match /channels/{channelId} {
        // Allow logged-in users to read channels to see server details before joining
        allow list, read: if request.auth != null;
        
        // Only server members can create/update/delete channels (delegated to server owner in UI)
        allow create, update, delete: if get(/databases/$(database)/documents/servers/$(serverId)).data.members.hasAny([request.auth.uid]);

        match /messages/{messageId} {
          // A user can create a message if they are a member of the server
          allow create: if request.auth.uid in get(/databases/$(database)/documents/servers/$(serverId)).data.members;
          // A user can read messages if they are a member of the server
          allow read: if get(/databases/$(database)/documents/servers/$(serverId)).data.members.hasAny([request.auth.uid]);
          // A user can update/delete a message if they are the sender
          allow update, delete: if request.auth.uid == resource.data.sender;
        }
      }
    }
  }
}
